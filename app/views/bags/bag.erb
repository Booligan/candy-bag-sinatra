<center><h1> <%= @user.username %>'s <%= @bag.name %> bag</h1><center>
<center><p>Look at all of this candy!</p></center>

<p>Candy - Rating</p><br><br>
<%if !@bag.candies.empty?%>
  <%@bag.candies.each do |candy|%>
    <a href="/candy/<%= @bag.id %>/<%= candy.id %>/edit"><%= candy.name%> - <%=candy.rating%></a><br>
  <%end%>
<%else%>
  <p>EMPTY BAG</p>
<%end%>
<a href="/candy/<%= @bag.id %>/new">Add Candy</a>
<br><br>

<form method="post" action="/bags/<%= @user.username %>/<%= @bag.id %>/delete">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete bag">
</form>
<br><br>

<form method="post" action="/bags/<%= @user.username %>/<%= @bag.id %>"
  <center><p>Rate this bag:</p></center>
  <input type="radio" name="rating" value="1"> 1
  <input type="radio" name="rating" value="2"> 2
  <input type="radio" name="rating" value="3"> 3
  <input type="radio" name="rating" value="4"> 4
  <input type="radio" name="rating" value="5"> 5
  <input type="submit" name="" value="submit">
</form>
